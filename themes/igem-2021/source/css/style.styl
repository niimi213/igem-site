header-height = 52px

@font-face
  font-family FontAwesome
  font-style normal
  font-weight normal
  src url("https://2021.igem.org/wiki/images/b/bf/T--UTokyo--fontawesome-webfont.eot?#iefix&v=4.7.0") format("embedded-opentype"), url("https://2021.igem.org/wiki/images/0/01/T--UTokyo--fontawesome-webfont.woff?v=4.7.0") format("woff"), url("https://2021.igem.org/wiki/images/b/bc/T--UTokyo--fontawesome-webfont.ttf?v=4.7.0") format("truetype"), url("https://2021.igem.org/wiki/images/3/36/T--UTokyo--fontawesome-webfont.svg?v=4.7.0#fontawesomeregular") format("svg")

.fa
  font-family FontAwesome

body
  margin 0

header
  position fixed
  top 0
  left 0
  width 100%
  height header-height
  background rgba(255, 255, 255, 0.8)
  box-shadow 0px 1px 4px rgba(186, 186, 186, 0.25)
  backdrop-filter blur(4px)
  /* Note: backdrop-filter has minimal browser support */
  display flex
  flex-direction row
  align-items center

  a
    color black
    text-decoration none

  h2
    margin 0
    padding 0
    margin-left 12.5%
    font-family Roboto
    font-style normal
    font-weight 500
    font-size 18px
    line-height header-height

  nav
    flex 1
    display flex
    flex-direction row
    justify-content flex-end
    margin-right 12.5%
    font-family Roboto

    a
      margin-left 50px

#index-main-section
  padding-top header-height
  background-color #F3F3F3
  height 650px
  text-align center

  h1
    font-family Roboto
    font-style normal
    font-weight 500
    font-size 72px
    margin-top 203px
    margin-bottom 20px

  h3
    width 41%
    font-family Roboto
    font-style normal
    font-weight 300
    font-size 24px
    margin: 0 auto

  a
    display inline-block
    font-family Roboto
    color black
    text-decoration none
    padding 10px 15px
    background-color #99C1C1
    border-radius 6px
    margin-top 20px

    :hover
      color black
      text-decoration none

.index-normal-section
  height 600px
  font-family Roboto
  display flex
  flex-direction row
  padding 60px 12.5vw

  .image-temp
    flex 1
    background-color #F3F3F3

  .index-sec-content
    flex 1
    font-size 18px

.index-section-odd
  background-color white

.index-section-even
  background-color #C4C4C4
  flex-direction row-reverse

.index-sec-separator
  width 120px

// generalなhxとして
h1
  font-family Roboto
  font-style normal
  font-weight 500
  font-size 48px

h2
  font-family Roboto
  font-style normal
  font-weight 500
  font-size 36px

h3
  font-family Roboto
  font-style normal
  font-weight 500
  font-size 24px

footer
  background-color #C4C4C4
  height 520px
  padding 0 12.5vw
  box-sizing border-box
  font-family Roboto

  #footer-inner
    height 240px
    padding 40px 0
    box-sizing border-box
    img
      float left
    h3
      margin-top 0
      margin-bottom 57px
    svg
      margin-right 10px
    #footer-contacts-content
      font-style normal
      font-weight 300
      font-size 18px
      line-height 30px

  #sponsors
    clear both
    display flex
    height 160px
    margin 40px 0
    gap 24px
    div
      flex 1
      background-color #E5E5E5

  #footer-copyright
    font-size 12px
    height 40px
    line-height 40px

.contents-wrapper
  margin 90px 12.5vw
  display flex
  font-family Lato
  font-size 18px
  font-weight 300
  line-height 30px

  .page-navigation
    position fixed
    width 280px
    margin-right 40px
    background-color white
    .toc-number
      display none
    ol
      margin 0
      padding 0
      list-style-type none
    .toc-child
      margin-left 8px
      li
        margin-top 14px
    a
      color black
      text-decoration none
      font-family Roboto

  article.post
    margin-left 320px
    .eyecatch
      height 320px
      background-color #E5E5E5
      text-align center
      line-height 320px

  article.page
    width 100%
    .eyecatch
      height 360px
      background-color #E5E5E5
      text-align center
      line-height 320px

.gallery
  font-family Roboto
  display flex
  gap 60px
  flex-wrap wrap
  justify-content center
  p
    margin 0
  img
    width 240px
    height auto
  h3
    margin-top 11px
    margin-bottom 10px
  .profile-bio
    font-size 14px
  .profile-voice
    margin-top 10px
    font-size 12px
    line-height 24px