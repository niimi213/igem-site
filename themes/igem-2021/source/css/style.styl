header-height = 52px

body
  margin 0

header
  position fixed
  top 0
  left 0
  width 100%
  height header-height
  background rgba(255, 255, 255, 0.8)
  box-shadow 0px 1px 4px rgba(186, 186, 186, 0.25)
  backdrop-filter blur(4px)
  /* Note: backdrop-filter has minimal browser support */
  display flex
  flex-direction row
  align-items center

  h2
    margin 0
    padding 0
    margin-left 12.5%
    font-family Roboto
    font-style normal
    font-weight 500
    font-size 18px
    line-height header-height

  nav
    flex 1
    display flex
    flex-direction row
    justify-content flex-end
    margin-right 12.5%
    font-family Roboto

    a
      margin-left 50px

#index-main-section
  padding-top header-height
  background-color #F3F3F3
  height 650px
  text-align center

  h1
    font-family Roboto
    font-style normal
    font-weight 500
    font-size 72px
    margin-top 203px
    margin-bottom 20px

  h3
    width 41%
    font-family Roboto
    font-style normal
    font-weight 300
    font-size 24px
    margin: 0 auto

  a
    display inline-block
    font-family Roboto
    color black
    text-decoration none
    padding 10px 15px
    background-color #99C1C1
    border-radius 6px
    margin-top 20px

    :hover
      color black
      text-decoration none

.index-normal-section
  height 600px
  font-family Roboto
  display flex
  flex-direction row
  padding 60px 12.5vw

  .image-temp
    flex 1
    background-color #F3F3F3

  .index-sec-content
    flex 1
    font-size 18px

.index-section-odd
  background-color #C4C4C4

.index-section-even
  background-color white
  flex-direction row-reverse

.index-sec-separator
  width 120px

